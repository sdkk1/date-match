<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat"><%= @user.following.count %></strong>人にいいねをしました
  </a>　
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat"><%= @user.followed_count %></strong>人にいいねをされました
  </a>
</div>
