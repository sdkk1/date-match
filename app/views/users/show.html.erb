<% provide(:title, "ユーザー詳細") %>
<div class="container">
  <h3 class="title-profile">ユーザー詳細</h3>
  <div class="row">
    <div class="col-md-4">
      <div class="user-picture-box">
        <%= image_tag @user.picture.url(:thumb) %>
      </div>
    </div>
    <div class="col-md-8">
      <h4 class="show-user-name"><%= @user.name %></h4>
      <div>
        <%= @user.introduction %>
      </div>
      <% if current_user == @user %>
        <div class="account-edit"><%= link_to "編集する", edit_user_path(@user) %></div>
      <% end %>
    </div>
  </div>
</div>
