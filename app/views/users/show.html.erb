<% provide(:title, "ユーザー詳細") %>
<div class="container">
  <h3 class="title-profile">ユーザー詳細</h3>
  <div class="row">
    <div class="col-md-6">
      <span class="picture">
        <% if @user.picture.url.present? %>
          <%= link_to((image_tag @user.picture.thumb400.url), user_path(@user.id), class: 'user-picture') %>
        <% end %>
      </span>
    </div>
    <div class="col-md-6">
      <h4 class="show-user-name"><%= @user.name %></h4>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <div class="show-user-introduction"><%= @user.introduction %></div>
      <% if current_user == @user %>
        <div class="show-user-edit"><%= link_to "ユーザー編集", edit_user_path(@user) %></div>
      <% end %>
      <%= render 'follow_form' if logged_in? %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <% if @user.datespots.any? %>
        <h3>デートスポット (<%= @user.datespots.count %>)</h3>
        <ol class="datespots">
          <%= render @datespots %>
        </ol>
        <%= will_paginate @datespots %>
      <% end %>
    </div>
  </div>
</div>
