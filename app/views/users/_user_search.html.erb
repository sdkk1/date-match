<%= search_form_for @search do |form| %>
  <div class="col-md-2">
    <div class='form-group'>
      <%= form.search_field :name_cont, placeholder: "ユーザー名で検索", class: 'form-control font-awesome' %>
    </div>
  </div>
  <div class="col-md-2">
    <div class='form-group'>
      <%= form.select( :sorts, {'更新日の新しい順': 'updated_at desc', '更新日の古い順': 'updated_at asc'}, { selected: params[:q][:sorts] })%>
    </div>
  </div>
  <div class="col-md-2">
    <div class='form-group'>
      <%= form.submit nil, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
