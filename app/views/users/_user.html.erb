<li>
  <div class="row">
    <div class="col-md-6">
      <span class="picture">
        <% if user.picture.url.present? %>
          <%= link_to((image_tag user.picture.thumb200.url), user_path(user.id), class: 'user-picture') %>
        <% end %>
      </span>
    </div>
    <div class="col-md-6">
      <h4 class="user-name"><%= link_to user.name, user %></h4>
      <% if (current_user.admin? && current_user != user) || (!current_user.admin? && current_user == user) %>
        <%= link_to "削除", user_path(user), method: :delete,
                                      data: { confirm: "本当に削除しますか？" } %>
      <% end %>
    </div>
  </div>
</li>
