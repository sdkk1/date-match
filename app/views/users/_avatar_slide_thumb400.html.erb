<% if @user.avatars.attached? %>
  <div class="swiper-container slider--<%= @user.id %>">
    <div class="swiper-wrapper">
      <% @user.avatars.each do |avatar| %>
        <div class="swiper-slide"><%= image_tag avatar.variant(resize:'400x400').processed %></div>
      <% end %>
    </div>
    <div class="swiper-scrollbar"></div>
  </div>
<% else %>
  <%= image_tag 'thumb400_default.png'%>
<% end %>
<% if @user.avatars.attached? %>
  <div class="swiper-container thumbnail--<%= @user.id %>">
    <div class="swiper-wrapper">
      <% @user.avatars.each do |avatar| %>
        <div class="swiper-slide"><%= image_tag avatar.variant(resize:'400x400').processed %></div>
      <% end %>
    </div>
  </div>
<% end %>
