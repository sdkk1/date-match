<div class='info-form'>
  <%= form.label :sex %><span class="info-form__input-need">※必須</span><br>
  <div class="info-form__radio-button">
    <input id="user_man" type="radio" name="user[sex]" value="man" checked="checked">
    <label for="user_man">男性</label>
  </div>
  <div class="info-form__radio-button">
    <input id="user_woman" type="radio" name="user[sex]" value="woman">
    <label for="user_woman">女性</label>
  </div>
</div>
<div class='info-form'>
  <%= form.label :name %><span class="info-form__input-need">※必須(50文字以内)</span><br>
  <%= form.text_field :name, placeholder: "ユーザー名を入力", class: 'info-form__input-form', required: true, autofocus: true %>
</div>
<div class='info-form'>
  <%= form.label :email %><span class="info-form__input-need">※必須(255文字以内)</span><br>
  <%= form.email_field :email, placeholder: "メールアドレスを入力", class: 'info-form__input-form', id: 'user_email', required: true %>
</div>
<div class='info-form'>
  <%= form.label :password %><span class="info-form__input-need">※必須(6文字以上)</span><br>
  <%= form.password_field :password, placeholder: "パスワードを入力", class: 'info-form__input-form', id: 'user_password', required: true %>
</div>
<div class='info-form'>
  <%= form.label :password_confirmation %><span class="info-form__input-need">※必須(6文字以上)</span><br>
  <%= form.password_field :password_confirmation, placeholder: "パスワード（確認）を入力", class: 'info-form__input-form', required: true %>
</div>
<div class='info-form'>
  <%= form.label :avatars %><span class="info-form__input-unneed">※任意(4枚まで)</span><br>
  <%= form.file_field :avatars, multiple: true, class: 'info-form__file-form', id: 'user_avatars' %>
</div>
<div class='info-form'>
  <%= form.label :prefecture_code %><span class="info-form__input-unneed">※任意</span><br>
  <%= form.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, include_blank: '居住地を選択' %>
</div>
<div class='info-form'>
  <%= form.label :age %><span class="info-form__input-unneed">※任意</span><br>
  <%= form.select :age, options_for_select(User.ages_i18n.invert, selected: form.object.age), { include_blank: "年齢を選択" }, { class: 'info-form__select-form' } %>
</div>
<div class='info-form'>
  <%= form.label :introduction %><span class="info-form__input-unneed">※任意(255文字以内)</span><br>
  <%= form.text_area :introduction, placeholder: "自己紹介を入力", class: 'info-form__textarea-form' %>
</div>
<div class="action-button">
  <%= form.submit yield(:button_text), class: "action-button__submit" %>
</div>
