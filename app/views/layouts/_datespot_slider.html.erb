<script>
  <% if @datespot.present? %>
    var mainSlider_<%= @datespot.id %> = new Swiper('.slider-<%= @datespot.id %>', {
      loop: true,
      scrollbar: {
        el: '.swiper-scrollbar',
        hide: true,
        draggable: true,
      },
    });

    var Thumbnail_<%= @datespot.id %> = new Swiper('.thumbnail-<%= @datespot.id %>', {
      loop: true,
      slidesPerView: 1,
      slideToClickedSlide: true,
    });

    mainSlider_<%= @datespot.id %>.on('slideChange', () => {
      Thumbnail_<%= @datespot.id %>.slideToLoop(mainSlider_<%= @datespot.id %>.realIndex);
    });

    Thumbnail_<%= @datespot.id %>.on('slideChange', () => {
      mainSlider_<%= @datespot.id %>.slideToLoop(Thumbnail_<%= @datespot.id %>.realIndex);
    });
  <% end %>
</script>
