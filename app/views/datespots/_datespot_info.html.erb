<div class="datespot-info-top">
  <h4 class="datespot-name">
    <%= link_to @datespot.name, datespot_path(@datespot) %>
  </h4>
  <div class="datespot-change">
    <% if current_user == @datespot.user %>
      <%= link_to edit_datespot_path(@datespot), class: 'datespot-edit' do %>　
        <i class="far fa-edit"></i>
      <% end %>
    <% end %>
    <% if logged_in? %>
      <% if current_user.admin? || (current_user == @datespot.user) %>
        <%= link_to datespot_path(@datespot), method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'datespot-delete' do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="datespot-user-name">
  <% if @datespot.user.avatars.attached? %>
    <%= link_to @datespot.user do %>
      <%= image_tag @datespot.user.avatars.first.variant(resize:'24x24').processed, class: "datespot-user-avatar" %>
      <%= @datespot.user.name %>
    <% end %>
  <% else %>
    <%= link_to @datespot.user do %>
      <%= image_tag 'thumb50_default.png', class: "datespot-user-avatar" %>
      <%= @datespot.user.name %>
    <% end %>
  <% end %>
</div>
<span class="datespot-address"><i class="fas fa-map-marker-alt datespot-info-icon fa-lg"></i><%= @datespot.address %></span><br>
<span class="datespot-range"><i class="fas fa-yen-sign datespot-info-icon fa-lg"></i><%= @datespot.range_i18n %></span><br>
<div class="datespot-evaluations">
  <%= render 'datespots/datespot_evaluation' %>
  <span class="datespot-impressions"><i class="fas fa-eye datespot-impressions-icon"></i><%= @datespot.impressions_count %></span>
</div>
<span class="datespot-keywords"><%= render 'datespots/tag_list', tag_list: @datespot.tag_list %></span>
<div class="datespot-info-bottom">
  <span class="timestamp">
    <%= l @datespot.updated_at %>
  </span>
  <div class="datespot-actions">
    <%= render 'users/list_form' if logged_in? %>
    <%= render 'users/favorite_form' if logged_in? %>
  </div>
</div>
