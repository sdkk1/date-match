<% if @datespot.images.attached? %>
  <div class="swiper-container datespot-slider">
    <div class="swiper-wrapper">
      <% @datespot.images.each do |image| %>
        <div class="swiper-slide"><%= image_tag image.variant(resize:'400x400').processed, class: "datespot-slider--image" %></div>
      <% end %>
    </div>
    <div class="swiper-pagination"></div>
  </div>
<% else %>
  <%= image_tag 'thumb400_default.png', class: "datespot-slider--no-image" %>
<% end %>
