<div class = 'form-group'>
  <%= form.label :images %> <span class="input-unneed">※任意(6枚まで)</span>
  <%= form.file_field :images, multiple: true, class: 'form-control', id: 'datespot_image' %>
</div>
<div class = 'form-group'>
  <%= form.label :name %> <span class="input-need">※必須(50文字以内)</span>
  <%= form.text_field :name, placeholder: "店名を入力", class: 'form-control', id: 'datespot_name' %>
</div>
<div class = 'form-group'>
  <%= form.label :place %> <span class="input-need">※必須</span>
  <%= form.select :place, options_for_select(Datespot.places_i18n.invert, selected: form.object.place), { include_blank: "エリアを選択" }, { class: 'form-control', id: 'datespot_place' } %>
</div>
<div class = 'form-group'>
  <%= form.label :range %> <span class="input-need">※必須</span>
  <%= form.select :range, options_for_select(Datespot.ranges_i18n.invert, selected: form.object.range), { include_blank: "価格帯を選択" }, { class: 'form-control', id: 'datespot_range' } %>
</div>
<div class = 'form-group'>
  <%= form.label :tag_list %> <span class="input-unneed">※任意</span>
  <%= form.text_field :tag_list, placeholder: "キーワードをカンマ区切りで入力：(例) 美味しい,安い", class: 'form-control', id: 'datespot_tag' %>
</div>
<div class = 'form-group'>
  <%= form.label :point %> <span class="input-unneed">※任意(255文字以内)</span>
  <%= form.text_area :point, placeholder: "ポイントを入力", class: 'form-control', id: 'datespot_point' %>
</div>
<div class = 'form-group'>
  <%= form.label :caution %> <span class="input-unneed">※任意(255文字以内)</span>
  <%= form.text_area :caution, placeholder: "注意点を入力", class: 'form-control', id: 'datespot_caution' %>
</div>
<%= form.submit yield(:button_text), class: "btn btn-primary" %>
