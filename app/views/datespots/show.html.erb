<% provide(:title, "#{@datespot.name}") %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render 'datespots/image_slide_thumb400' %>
      <%= render 'users/favorite_form' if logged_in? %>
      <%= render 'users/list_form' if logged_in? %>
    </div>
    <div class="col-md-8">
      <h2 class="datespot-name"><%= @datespot.name %></h2>
      <div class="change-datespot">
        <% if current_user == @datespot.user %>
          <%= link_to "編集", edit_datespot_path(@datespot), class: 'edit-datespot' %>　
        <% end %>
        <% if logged_in? %>
          <% if current_user.admin? || (current_user == @datespot.user) %>
            <%= link_to "削除", datespot_path(@datespot), method: :delete, class: 'delete-datespot',
                              data: { confirm: "本当に削除しますか？" } %>
          <% end %>
        <% end %>
      </div>
      <div class="datespot-info">
        <% if logged_in? %>
          <h4 class="user-name">【投稿者】<%= link_to @datespot.user.name, @datespot.user %></h4>
        <% else %>
          <h4 class="user-name">【投稿者】<%= @datespot.user.name %></h4>
        <% end %>
        <h4 class="address">【住所】<%= @datespot.address %></h4>
        <h4 class="range">【予算】<%= @datespot.range_i18n %></h4>
        <h4 class="keyword">【キーワード】<%= render 'tag_list', tag_list: @datespot.tag_list %></h4>
        <h4 class="point">【ポイント】<%= @datespot.point %></h4>
        <h4 class="caution">【注意点】<%= @datespot.caution %></h4>
      </div>
      <div class="comment">
        <h3 class="text-left title">口コミ</h3>
        <div id="comments_area">
          <%= render partial: 'comments/index', locals: { comments: @comments } %>
        </div>
        </ul>
        <% if logged_in? %>
          <div class="comment-create">
            <h3 class="text-left">口コミする</h3>
            <%= render partial: 'comments/form', locals: { comment: @comment, datespot: @datespot } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "map-show" %>
