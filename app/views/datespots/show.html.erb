<% provide(:title, "#{@datespot.name}") %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <span class="picture">
        <% if @datespot.picture.url.present? %>
          <%= link_to((image_tag @datespot.picture.thumb400.url), datespot_path(@datespot.id), class: 'datespot-picture') %>
        <% end %>
      </span>
      <%= render 'users/favorite_form' if logged_in? %>
    </div>
    <div class="col-md-8">
      <h2 class="datespot-name"><%= @datespot.name %></h2>
      <div class="change-datespot">
        <% if current_user == @datespot.user %>
          <%= link_to "編集", edit_datespot_path(@datespot), class: 'edit-datespot' %>　
        <% end %>
        <% if logged_in? %>
          <% if current_user.admin? || (current_user == @datespot.user) %>
            <%= link_to "削除", datespot_path(@datespot), method: :delete, class: 'delete-datespot',
                              data: { confirm: "本当に削除しますか？" } %>
          <% end %>
        <% end %>
      </div>
      <% if logged_in? %>
        <h4 class="user-name">【投稿者】<%= link_to @datespot.user.name, @datespot.user %></h4>
      <% else %>
        <h4 class="user-name">【投稿者】<%= @datespot.user.name %></h4>
      <% end %>
      <h4 class="area">【エリア】<%= @datespot.area %></h4>
      <h4 class="price">【価格帯】<%= @datespot.price %></h4>
      <h4 class="keyword">【キーワード】<%= @datespot.keyword %></h4>
      <h4 class="point">【ポイント】<%= @datespot.point %></h4>
      <h4 class="caution">【注意点】<%= @datespot.caution %></h4>
    </div>
  </div>
</div>
