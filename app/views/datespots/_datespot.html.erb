<% @datespot = datespot %>
<li id="datespot-<%= @datespot.id %>">
  <%= render 'datespots/image_slide_thumb400' %>
  <%= render 'users/favorite_form' if logged_in? %>
  <%= render 'users/list_form' if logged_in? %><br>
  <%= render 'datespots/datespot_evaluation' %><br>
  <%= render 'datespots/datespot_info' %>
  <span class="timestamp">
    <%= l @datespot.updated_at %>
  </span>
  <% if logged_in? %>
    <% if current_user.admin? || (current_user == @datespot.user) %>
      <%= link_to "削除", datespot_path(@datespot), method: :delete,
                        data: { confirm: "本当に削除しますか？" } %>
    <% end %>
  <% end %>
</li>
