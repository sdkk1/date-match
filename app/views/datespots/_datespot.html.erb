<% @datespot = datespot %>
<li class="datespot" id="datespot-<%= @datespot.id %>">
  <div class="datespot-card-upper">
    <% if @datespot.images.attached? %>
      <%= link_to datespot_path(@datespot) do %>
        <%= image_tag @datespot.images.first.variant(resize:'300x300!').processed, class: "datespot-image" %>
      <% end %>
    <% else %>
      <%= image_tag 'thumb400_default.png', class: "datespot-no-image" %>
    <% end %>
  </div>
  <div class="datespot-card-lower">
    <%= render 'datespots/datespot_info' %>
  </div>
</li>
