<% @datespot = Datespot.find(browsing_history.datespot_id) %>
<li id="datespot-<%= @datespot.id %>">
  <p><%= l browsing_history.created_at %></p>
  <div class="row">
    <div class="col-md-4">
      <div class="browsing_history-datespot">
        <p class="list-message">この投稿を閲覧しました。</p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <% if @datespot.images.attached? %>
        <div class="swiper-container slider-<%= @datespot.id %>">
          <div class="swiper-wrapper">
            <% @datespot.images.each do |image| %>
              <div class="swiper-slide"><%= image_tag image.variant(resize:'200x200').processed %></div>
            <% end %>
          </div>
          <div class="swiper-scrollbar"></div>
        </div>
      <% else %>
        <%= image_tag 'thumb200_default.png'%>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= render 'datespots/datespot_evaluation' %><br>
      <%= render 'datespots/datespot_info' %>
    </div>
  </div>
</li>
